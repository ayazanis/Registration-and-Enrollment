

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#2AFF2A"
    android:layout_height="match_parent"
    android:id="@+id/scrollView" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2AFF2A"
    tools:context="com.example.user.minorproject.StudentDetail">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:weightSum="3"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <TextView
           android:layout_width="120dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:text="Name"
           android:id="@+id/sdText_1"/>
       <EditText
           android:layout_width="match_parent"
           android:layout_weight="2"
           android:layout_height="wrap_content"
           android:id="@+id/sdEdit_1"
          />

   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">
        <TextView
            android:layout_width="120dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Mobile"
            android:id="@+id/sdText_2"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:id="@+id/sdEdit_2"
           />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Email Id"
            android:id="@+id/sdText_3"
            android:layout_weight="1"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sdEdit_3"
           android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Subject"
            android:id="@+id/sdText_4"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sdEdit_4" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Description"
            android:id="@+id/sdText_5"
            android:layout_weight="1"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sdEdit_5"
           android:layout_weight="1"/>

    </LinearLayout>
   <!-- <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:text=""
            android:layout_height="wrap_content"
            android:id="@+id/sdText_6"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sdEdit_6"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
       <!-- <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/sd_Text7"
            android:text="Date"
            android:layout_weight="1"/>-->
        <Button
            android:layout_width="160dp"
            android:layout_height="wrap_content"
             android:id="@+id/sdButton_1"
            android:text="Date"
            android:textAllCaps="false"
            android:layout_weight="1"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sdEdit_7"
            android:layout_weight="1"/>
    </LinearLayout>


    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="60dp">
        <Button
            android:layout_width="wrap_content"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:id="@+id/sdButton_2"
            android:text="Save"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sdButton_3"
            android:layout_marginLeft="70dp"
            android:textAllCaps="false"
            android:text="Back"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>